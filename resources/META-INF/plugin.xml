<idea-plugin version="2">
  <id>com.wingsofts.plugin.MVPHelper</id>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>
  <name>MVPHelper</name>
  <version>1.2</version>
  <vendor email="androidwing1992@gmail.com" url="https://github.com/githubwing/MVPHelper"></vendor>
  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->
  <description>
    A plugin can help you to create classes and interfaces for MVP.Click Generate --> MVPHelper in Contract or Presenter class. see the https://github.com/githubwing/MVPHelper
  </description>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->

    <action id="MVPHelper.MVPHelperAction" class="com.wingsofts.mvphelper.MVPHelperAction" text="MVPHelper"
            description="help you to create contract of MVP">
      <add-to-group group-id="GenerateGroup" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="meta 1"/>
    </action>
  </actions>
  <extensions defaultExtensionNs="com.intellij"></extensions>

</idea-plugin>